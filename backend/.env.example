# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/localdrive

# Storage Configuration
# Comma-separated list of storage paths
# Windows example: STORAGE_PATHS=C:\storage,D:\storage
# macOS/Linux example: STORAGE_PATHS=/Users/storage1,/mnt/storage2
STORAGE_PATHS=./storage

# Server Configuration
PORT=3001

# JWT Secret Key
# Generate a secure random key for production
JWT_SECRET=your-secret-key-change-this-in-production

# Optional: CORS Origins
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: Maximum file size (in bytes)
# MAX_FILE_SIZE=104857600

# Optional: Database pool configuration
# DB_MAX_CONNECTIONS=10
# DB_MIN_CONNECTIONS=1

# Optional: Logging level
# LOG_LEVEL=info